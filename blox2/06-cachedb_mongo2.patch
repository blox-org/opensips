+                    const unsigned int rows)
+{
+	unsigned int i;
+	struct db_row *old_buf;
 
+	old_buf = RES_ROWS(_res);
 
+	RES_ROWS(_res) = pkg_malloc(rows * (sizeof(db_row_t) +
+	                                    sizeof(db_val_t) * RES_COL_N(_res)) );
